<%- include("partials/header") -%>

<h1>Compose</h1>

<form action="/compose" method="post">
  <div class="form-group">
    <label for="newPostTitle" class="form-label">Title</label>
    <input type="text" class="form-control" id="newPostTitle" name="newPostTitle" autocomplete="off">
  </div>
  <div class="form-group">
    <label for="newPostBody" class="form-label">Post</label>
    <textarea class="form-control" id="newPostBody" name="newPostBody" rows="5" autocomplete="off"></textarea>
  </div>
  <button class="btn btn-primary btn-lg" type="submit" name="post">Publish</button>
</form>

<%- include("partials/footer") -%>